@model LinkshellManager.Models.Item

@{
    ViewData["Title"] = "Delete Item";
}

<h2>Delete Item</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Item Name
        </dt>
        <dd class="col-sm-10">
            @Model.ItemName
        </dd>
        <dt class="col-sm-2">
            Item Type
        </dt>
        <dd class="col-sm-10">
            @Model.ItemType
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>
        <dt class="col-sm-2">
            Linkshell Name
        </dt>
        <dd class="col-sm-10">
            @Model.LinkshellName
        </dd>
        <dt class="col-sm-2">
            Notes
        </dt>
        <dd class="col-sm-10">
            @Model.Notes
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>