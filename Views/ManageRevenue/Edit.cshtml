@model LinkshellManager.Models.Income

@{
    ViewData["Title"] = "Edit Income";
    var linkshells = ViewBag.Linkshells as List<LinkshellManager.Models.Linkshell>;
}

<h2>Edit Income</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="LinkshellId" class="control-label">Linkshell</label>
        <select asp-for="LinkshellId" class="form-control" asp-items="@(new SelectList(linkshells, "Id", "LinkshellName"))" onchange="updateLinkshellName()"></select>
    </div>
    <input type="hidden" asp-for="LinkshellName" id="LinkshellName" />
    <div class="form-group">
        <label asp-for="MethodOfIncome" class="control-label"></label>
        <input asp-for="MethodOfIncome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Details" class="control-label"></label>
        <input asp-for="Details" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Value" class="control-label"></label>
        <input asp-for="Value" class="form-control" />
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script>
        function updateLinkshellName() {
            var select = document.querySelector('select[asp-for="LinkshellId"]');
            var selectedOption = select.options[select.selectedIndex];
            var linkshellName = selectedOption.getAttribute('data-name');
            document.getElementById('LinkshellName').value = linkshellName;
        }

        // Set the initial value of LinkshellName when the page loads
        document.addEventListener('DOMContentLoaded', function() {
            updateLinkshellName();
        });
    </script>
}