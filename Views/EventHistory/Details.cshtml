@model LinkshellManager.Models.EventHistory

@{
    ViewData["Title"] = "Event History Details";
}
<div class="container mt-5" style="max-width: 90%; margin: 0 auto;">
    <h2 class="mb-5">Event History Details</h2>

    <div>
        <h4>Event Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Event Name</dt>
            <dd class="col-sm-10">@Model.EventName</dd>
            <dt class="col-sm-2">Event Type</dt>
            <dd class="col-sm-10">@Model.EventType</dd>
            <dt class="col-sm-2">Event Location</dt>
            <dd class="col-sm-10">@Model.EventLocation</dd>
            <dt class="col-sm-2">Start Time</dt>
            <dd class="col-sm-10">@Model.StartTime</dd>
            <dt class="col-sm-2">End Time</dt>
            <dd class="col-sm-10">@Model.EndTime</dd>
            <dt class="col-sm-2">Duration</dt>
            <dd class="col-sm-10">@Model.Duration</dd>
            <dt class="col-sm-2">DKP Per Hour</dt>
            <dd class="col-sm-10">@Model.DkpPerHour</dd>
            <dt class="col-sm-2">Event DKP</dt>
            <dd class="col-sm-10">@Model.EventDkp</dd>
            <dt class="col-sm-2">Details</dt>
            <dd class="col-sm-10">@Model.Details</dd>
        </dl>
    </div>

    <div>
        <h4 class="mt-5 mb-4">Participants</h4>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Character Name</th>
                    <th>Job</th>
                    <th>Sub Job</th>
                    <th>Job Type</th>
                    <th>Start Time</th>
                    <th>Duration</th>
                    <th>Event DKP</th>
                    <th>Proctor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var userEvent in Model.AppUserEventHistories)
                {
                    <tr>
                        <td>@userEvent.CharacterName</td>
                        <td>@userEvent.JobName</td>
                        <td>@userEvent.SubJobName</td>
                        <td>@userEvent.JobType</td>
                        <td>@userEvent.StartTime</td>
                        <td>@userEvent.Duration</td>
                        <td>@userEvent.EventDkp</td>
                        <td>@userEvent.Proctor</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>